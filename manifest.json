{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "Odara TV",
  "short_name": "Odara TV",  
  "description": "Tech News, Movies and TV Shows",  
  "categories": ["technology", "tech", "sci-fi", "news", "movies", "tv shows", "tv series", "youtube"],
  "background_color": "#60dbfb",
  "theme_color": "#20232a",
  "start_url": "index.html",
  "scope": "/",  
  "display": "standalone",
  "orientation": "portrait",
  "dir": "rtl",
  "lang": "en-US",
  "icons": [
    {
      "src": "/apple-touch-icon.png",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "/msapplication-tile-image.png",
      "type": "image/png",
      "sizes": "512x512"
    },
    {
      "src": "/mask-icon.svg",
      "type": "image/svg+xml",
      "sizes": "683x683"
    }
  ],
  "shortcuts": [
    {
      "name": "Tech News",
      "short_name": "News",
      "description": "Read News",
      "url": "/?req=/news",
      "icons": [{ "src": "/svg/fi-rs-browser.svg", "sizes": "512x512" }]
    },
    {
      "name": "Tech Movies",
      "short_name": "Movies",
      "description": "Download Movies",
      "url": "/?req=/movies",
      "icons": [{ "src": "/svg/fi-rs-video-camera.svg", "sizes": "512x512" }]
    },
    {
      "name": "Tech TV Shows",
      "short_name": "TV Shows",
      "description": "Download TV Shows",
      "url": "/?req=/tvshows",
      "icons": [{ "src": "/svg/fi-rs-film.svg", "sizes": "512x512" }]
    },
    {
      "name": "YouTube Videos",
      "short_name": "Youtube",
      "description": "Watch Youtube Videos",
      "url": "/?req=/youtube",
      "icons": [{ "src": "/svg/fi-rs-play-alt.svg", "sizes": "512x512" }]
    }
  ],  
  "screenshots": [
    {
      "src": "/ui/1-news.png",
      "type": "image/png",
      "sizes": "320x669",
      "label": "Tech News"
    },
    {
      "src": "/ui/2-movies.png",
      "type": "image/png",
      "sizes": "320x659",
      "label": "Tech Movies"
    },
    {
      "src": "/ui/3-tv-shows.png",
      "type": "image/png",
      "sizes": "320x642",
      "label": "Tech TV Shows"
    },
    {
      "src": "/ui/4-youtube.png",
      "type": "image/png",
      "sizes": "320x643",
      "label": "Tech YouTube Videos"
    }
  ]
}
